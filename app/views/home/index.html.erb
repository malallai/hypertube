<div class="md-form mt-0">
  <%= form_with id: 'search_movie', data: { type: :json }, local: true, method: :get do |f |%>
    <div class="d-flex flex-column">
      <%= hidden_field_tag 'page', '1' %>
      <%= f.text_field :search, autofocus: true, placeholder: t('index.search'), class: 'form-control' %>
      <div class="mt-3 mb-3 d-flex d-inline-flex mr-3-all">
        <%= f.select "source", @sources %>
        <%= f.select "genre", @genres.collect { |genre| [t('movie.genres.' + genre), genre ] } %>
        <%= f.select "sort", @sortby.collect { |sort| [t('movie.sortby.' + sort), sort ] } %>
        <%= f.select "order", ['Desc', 'Asc'] %>
      </div>
      <%= f.submit t('index.submit'), class: "btn btn-primary btn-block col-2", data: { disable_with: false } %>
    </div>
  <% end %>
</div>
<div class="row mt-3" id="movies_container">
  <%= render :file => 'searchs/search' %>
</div>
